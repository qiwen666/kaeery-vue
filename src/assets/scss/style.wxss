:root {
  --bg-gray-color: #f6f8f9;
  --bg-white-color: #fff;
  --bg-add-color: #0caf87;
  --bg-edit-color: #5bc0de;
  --bg-del-color: #d9534f;
  --font-checked-color: #409EFF;
  --font-keyword-color: #999;
  --font-xxs: 10px;
  --font-xs: 12px;
  --font-sm: 13px;
  --font-md: 14px;
  --font-lg: 16px;
  --font-xl: 18px;
  --font-xxl: 20px;
}

* {
  box-sizing: border-box;
}

body {
  width: 100%;
  height: 100vh;
}

body, html {
  margin: 0;
  padding: 0;
  font-size: 16px;
  letter-spacing: 2px;
  font-family: Arial, Helvetica, sans-serif;
  -webkit-font-smoothing: antialiased;
}

